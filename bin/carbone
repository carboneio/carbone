#!/usr/bin/env node


var server = require('../lib/server');
var translator = require('../lib/translator');
var tool = require('../lib/tool');
var _action = process.argv[2];

switch (_action) {
  case 'server':
    server(process.argv.slice(3));
    break;
  case 'generateLang':
    translator.handleParams(process.argv.slice(3));
    break;
  case 'find':
    tool.findMarkers(process.argv.slice(3));
    break;
  default:
    usage(); 
}

function usage () {
  console.log('*************************************');
  console.log('Carbone Usage:');
  console.log('   carbone server [--help]');
  console.log('   carbone generateLang [--help]');
  process.exit();
}
