#!/usr/bin/env node


var server = require('../lib/server');
var _action = process.argv[2];

switch(_action){
  case 'server':
    server(process.argv.slice(3));
    break;
  default:
    usage(); 
}

function usage(){
  console.log('*************************************');
  console.log('Carbone Usage:');
  console.log('   carbone server [--help]');
  process.exit();
};
